{
    "name": "shahadatnb/unit-converter",
    "description": "This is my package unit-converter",
    "keywords": [
        "shahadatnb",
        "unit-converter"
    ],
    "homepage": "https://github.com/shahadatnb/unit-converter",
    "license": "MIT",
    "authors": [
        {
            "name": "Shahadat Hosain",
            "email": "shahadat80@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "AsianCoder\\UnitConverter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AsianCoder\\UnitConverter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
